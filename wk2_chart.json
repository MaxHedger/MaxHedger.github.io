{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Inflation | Great Britain",
      "anchor": "start",
      "subtitle": "All items, % | Source: ONS through ECO API",
      "fontSize": "14",
      "subtitleFontSize": "12",
      "color": "#f70340",
      "subtitleColor": "#000000"
    },
    "height": "300",
    "width": "container",
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "background": "#ffffff",
    "view": {
      "fill": "#ffffff",
      "strokeOpacity": 0
    },
    "data": {
      "url": "https://api.economicsobservatory.com/gbr/infl?vega",
      "format": {
        "type": "json"
      }
    },
    "mark": {
      "type": "line",
      "color": "#f70340",
      "strokeWidth": "1"
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {
          "title": "",
          "titleColor": "#122B39",
          "grid": false
        }
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {
          "title": "",
          "titleColor": "#122B39",
         
        }
      }
    }
  }
